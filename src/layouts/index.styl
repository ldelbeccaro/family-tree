@import '../styles/variables.styl'

body
  align-items center
  background-color background-gray
  color text-gray
  display flex
  font-family 'Roboto', sans-serif
  justify-content center

  > div
    width 100%

  .body-wrapper
    padding 48px 100px

    @media(max-width: 900px)
      padding 48px 24px

    a
      color bright-blue
      text-decoration none
      transition color 0.1s linear

      &:hover
        color dark-blue

    .app-container
      display flex
      flex-direction column
      align-items center

      .site-header
        border-bottom 1px solid border-gray
        margin-bottom 40px
        max-width 1000px
        padding-bottom 40px
        width 100%

        .header-container
          align-items center
          display flex
          justify-content space-between
          width 100%

          @media(max-width: 600px)
            flex-direction column

          h1
            font-size 26px
            line-height 1.1
            text-align center

            @media(max-width: 600px)
              margin-bottom 12px

          .nav
            display flex

            @media(max-width: 1080px)
              flex-direction column
              align-items flex-end

            @media(max-width: 600px)
              align-items center

            .search-bar
              margin-right 16px
              position relative

              @media(max-width: 1080px)
                margin 12px 0 0
                order 2

              input
                background-color white
                border 1px solid border-gray
                border-radius 3px
                font-size 14px
                max-width calc(100% - 20px)
                outline none
                padding 8px
                padding-left 38px
                width 260px

                @media(max-width: 700px)
                  max-width 212px

                &:hover
                  border 1px solid dark-blue

                &:focus
                  border 1px solid bright-blue

              .search-icon
                color border-gray
                height 20px
                left 8px
                position absolute
                top 6px

            .view-selection
              align-items center
              display flex
              color light-text-gray

              .view
                border-bottom 1px solid transparent
                cursor pointer
                margin 0 12px
                padding 4px 0

                &.selected
                  border-bottom 1px solid border-gray
                  color text-gray

      .header
        font-size 22px
        font-weight 500
        margin-bottom 24px
        text-transform capitalize

      .tree-view, .list-view
        margin-bottom 40px

.separator
  background-color text-gray
  border-radius 50%
  flex-shrink 0
  height 4px
  width 4px
  margin 0 8px

.footer
  color light-text-gray
  line-height 1.3
  text-align center
