@import './variables.styl'

.full-person-profile
  .header-section
    align-items center
    display flex

    @media(max-width: 450px)
      flex-direction column

    .image
      max-height 100px
      margin-right 24px

      @media(max-width: 450px)
        margin-right 0

    .section
      margin 0

      .name
        font-size 20px
        font-weight 600
        margin 16px 0

  .action-section
    align-items center
    display flex
    margin 24px 0 -12px

    .action
      cursor pointer

  .section
    margin 48px 0

    .section-header
      font-size 20px
      margin 20px 0

    .info
      display grid
      grid-template-columns 100px auto
      margin 16px 0

      .info-header
        font-weight 500
        line-height 1.3

      .info-value
        color light-text-gray
        display flex
        line-height 1.3
        word-wrap break-word
        overflow hidden

        @media(max-width: 500px)
          display block

          .separator
            display none
