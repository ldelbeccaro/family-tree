.tree-view-person
  align-items center
  background-color white
  border-radius 3px
  cursor pointer
  display flex
  flex-direction column
  line-height 1.1
  margin-bottom 8px
  max-width 160px
  padding 16px 24px
  text-align center

  .image
    margin-bottom 8px
    max-height 60px

  .info-section
    align-items center
    display flex
    flex-direction column

    .info, a.info
      margin 4px 0

    .name
      font-weight 500
